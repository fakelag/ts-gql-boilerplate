{
    "compilerOptions": {
        "outDir": "./.dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "lib": [
            "esnext",
            "dom",
            "es6"
        ]
    },
    "include": [
        "backend/*.ts",
        "config/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
